<style>
  body {
    margin-top: 10px;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }
  a {
    text-decoration: none;
    color: white;
    font-weight: bold;
  }

  .appointment {
    display: flex;
    align-items: center;
    align-content: center;
    flex-direction: column;
    margin-top: 3.3%;
    margin-bottom: 3%;
    background-color: white;
    padding: 2%;
    width: 30%;
    margin: auto;
    border-radius: 5px;
    border: 2px solid black;
    box-shadow: 5px 0px 5px 5px rgba(202, 200, 200, 0.875);
  }

  .details {
    width: 200px;
    height: 25px;
  }
  input {
    border: 0.3vh solid rgb(23, 154, 220);
  }
  h2 {
    color: black;
  }
  i {
    color: black;
  }
  .container {
    padding-top: 20px;
  }
  .options {
    margin-top: 5px;
    margin-bottom: 5px;
    color: white;
  }

  #navbar {
    background-color: #273c75;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 5px;
  }
  button {
    border: 0.3vh solid #273c75;
    background-color: #273c75;
  }
  button:hover a {
    background-color: white;
    color: black;
    padding: 12px;
  }
  #phone {
    font-size: large;
    padding-top: 2%;
  }
  #location {
    font-size: large;
    padding-top: 1%;
    color: black;
  }
  i {
    color: black;
  }

  #locations {
    color: black;
  }
  #Home {
    width: 6%;
  }
  #User {
    width: 6%;
  }

  .footer {
    background-color: #2d3436;
    color: white;
    font-weight: 500;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    margin-top: 20px;
    padding-bottom: 10px;
    margin-bottom: 10px;
  }
</style>
<head>
  <script
    src="https://kit.fontawesome.com/cde8601e7e.js"
    crossorigin="anonymous"
  ></script>
</head>

<center><h1>Dr Tooth Care</h1></center>
<div id="navbar">
  <button class="options" id="services">
    <a href="/services">Our Services</a>
  </button>
  <button class="options" id="Appointment">
    <a href="/appointment">Appointment</a>
  </button>
  <button class="options" id="User"><a href="/user">Bookings</a></button>
  <button class="options" id="Home"><a href="/">Logout</a></button>
</div>

<div class="container">
  <form action="/booked" method="post">
    <div class="appointment">
      <div>
        <center>
          <h2>BOOK YOUR</h2>
          <h2>APPOINTMENT</h2>
        </center>
      </div>
      <label><i class="fa-solid fa-user-plus"></i></label><br /><input
        type="text"
        id="name"
        class="details"
        name="name"
        autocomplete="off"
        placeholder="Name"
      />
      <br /><br />
      <label><i class="fa-solid fa-calendar-day"></i></label><br /><input
        type="date"
        class="details"
        id="date"
        name="date"
        autocomplete="off"
        placeholder="Date"
      />
      <br /><br />
      <input type="submit" id="submitButton" />
    </div>
  </form>
</div>

<div class="footer">
  <center>
    <div id="phone">
      <i class="fa-solid fa-phone" style="color: white"></i
      ><span> &nbsp; 7032123567</span>
    </div>
    <div id="location">
      <a href="#" id="locations"
        ><i class="fa-solid fa-location-dot" style="color: white"></i>&nbsp;
        &nbsp;<span style="color: white"> Dr. Tooth Care </span></a
      >
    </div>

    <p>Dr. Tooth Care Dental Clinic, Lb Nagar, Hyderabad, Telanagana 500088</p>
  </center>
</div>
